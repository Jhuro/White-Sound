<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_clr_d"
    android:padding="10dp">

    <ImageView
        android:id="@+id/lee_iv_icono"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_archivo_partitura"
        />

    <TextView
        android:id="@+id/lp_tv_nombre_archivo_partitura"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="5dp"
        android:text="@string/txt_lp_tv_nombre_archivo_partitura"
        android:textColor="@color/clr_e"
        android:textSize="12pt"
        android:textStyle="bold"
        android:gravity="center|start"/>

</LinearLayout>