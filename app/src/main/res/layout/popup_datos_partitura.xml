<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/fondo_popup_color_2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:padding="16dp">

    <TextView
        android:id="@+id/pdp_tv_autor"
        style="@style/texto_color_2"
        android:labelFor="@+id/pdp_et_nombre_autor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/txt_pdp_tv_autor"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pdp_et_nombre_partitura" />

    <EditText
        android:id="@+id/pdp_et_nombre_autor"
        style="@style/cuadro_texto_color_1"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pdp_tv_autor"
        android:autofillHints="Sin autor" />

    <TextView
        android:id="@+id/pdp_tv_titulo_partitura"
        style="@style/texto_color_2"
        android:labelFor="@+id/pdp_et_nombre_partitura"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/txt_pdp_tv_titulo_partitura"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/pdp_et_nombre_partitura"
        style="@style/cuadro_texto_color_1"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pdp_tv_titulo_partitura"
        android:autofillHints="Sin tÃ­tulo"/>

    <Button
        android:id="@+id/pdp_btn_cancelar"
        style="@style/boton_color_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginStart="4dp"
        android:text="@string/txt_pdp_btn_cancelar"
        android:textSize="14pt"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pdp_btn_aceptar"
        app:layout_constraintTop_toBottomOf="@+id/pdp_et_nombre_autor"  />

    <Button
        android:id="@+id/pdp_btn_aceptar"
        style="@style/boton_color_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="32dp"
        android:text="@string/txt_pdp_btn_aceptar"
        android:textSize="14pt"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/pdp_btn_cancelar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pdp_et_nombre_autor" />
</androidx.constraintlayout.widget.ConstraintLayout>