<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_clr_e"
    android:layout_gravity="center"
    android:padding="16dp">

    <TextView
        android:id="@+id/pdp_tv_autor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/txt_pdp_tv_autor"
        android:textColor="@color/clr_a"
        android:textSize="14pt"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/pdp_et_nombre_autor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/clr_a"
        android:ems="10"
        android:hint="@string/txt_pdp_et_nombre_autor"
        android:inputType="textPersonName"
        android:textColorHint="@color/clr_e"
        android:textSize="14pt"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pdp_tv_autor" />

    <TextView
        android:id="@+id/pdp_tv_titulo_partitura"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/txt_pdp_tv_titulo_partitura"
        android:textColor="@color/clr_a"
        android:textSize="14pt"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pdp_et_nombre_autor" />

    <EditText
        android:id="@+id/pdp_et_nombre_partitura"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/clr_a"
        android:ems="10"
        android:hint="@string/txt_pdp_et_nombre_partitura"
        android:inputType="textPersonName"
        android:textColorHint="@color/clr_e"
        android:textSize="14pt"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pdp_tv_titulo_partitura" />

    <Button
        android:id="@+id/pdp_btn_cancelar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="4dp"
        android:backgroundTint="@color/clr_b"
        android:text="@string/txt_pdp_btn_cancelar"
        android:textColor="@color/clr_e"
        android:textSize="14pt"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/pdp_btn_aceptar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pdp_et_nombre_partitura" />

    <Button
        android:id="@+id/pdp_btn_aceptar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/clr_b"
        android:text="@string/txt_pdp_btn_aceptar"
        android:textColor="@color/clr_e"
        android:textSize="14pt"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pdp_btn_cancelar"
        app:layout_constraintTop_toBottomOf="@+id/pdp_et_nombre_partitura" />
</androidx.constraintlayout.widget.ConstraintLayout>