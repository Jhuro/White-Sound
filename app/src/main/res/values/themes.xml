        <item name="android:drawableTint">@color/clr_e</item>
    </style>

    <style name="Theme.WhiteSound.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.WhiteSound.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.WhiteSound.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>