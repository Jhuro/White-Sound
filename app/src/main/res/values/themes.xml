<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WhiteSound" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="fondo_color_1" parent="Theme.WhiteSound">
        <item name="android:background">@color/color_fondo_1</item>
    </style>

    <style name="texto_color_1" parent="Theme.WhiteSound">
        <item name="android:textColor">@color/color_sobrepuesto_1</item>
    </style>

    <style name="fondo_popup_color_2" parent="Theme.WhiteSound">
        <item name="android:background">@drawable/bg_clr_2</item>
    </style>

    <style name="fondo_color_2" parent="Theme.WhiteSound">
        <item name="android:background">@color/color_fondo_2</item>
    </style>

    <style name="cuadro_texto_color_1" parent="Theme.WhiteSound">
        <item name="android:background">@color/color_fondo_1</item>
        <item name="android:textColorHint">@color/color_sobrepuesto_1</item>
        <item name="android:textColor">@color/color_sobrepuesto_1</item>
    </style>

    <style name="texto_color_2" parent="Theme.WhiteSound">
        <item name="android:textColor">@color/color_sobrepuesto_2</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="elemento_lista_color_3" parent="Theme.WhiteSound">
        <item name="android:background">@drawable/bg_clr_3</item>
        <item name="android:tint">@color/color_sobrepuesto_3</item>
        <item name="android:textColor">@color/color_sobrepuesto_3</item>
    </style>

    <style name="boton_color_3" parent="Theme.WhiteSound">
        <item name="android:background">@drawable/bg_clr_3</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/color_sobrepuesto_3</item>
        <item name="android:drawableTint">@color/color_sobrepuesto_3</item>
    </style>

    <style name="boton_imagen_color_1" parent="Theme.WhiteSound">
        <item name="android:background">@drawable/bg_clr_1</item>
        <item name="android:padding">10dp</item>
