        <item name="android:tint">@color/color_sobrepuesto_3</item>
    </style>

    <style name="menu_inferior_color_3" parent="Theme.WhiteSound">
        <item name="android:background">@color/color_fondo_3</item>
    </style>

    <style name="fondo_actividad_color_b" parent="Theme.WhiteSound">
        <item name="android:background">@color/clr_b</item>
    </style>

    <style name="boton_imagen_color_e" parent="Theme.WhiteSound">
        <item name="android:background">@drawable/bg_clr_e</item>
        <item name="android:padding">10dp</item>
        <item name="android:drawableTint">@color/clr_a</item>
    </style>

    <style name="boton_color_d" parent="Theme.WhiteSound">
